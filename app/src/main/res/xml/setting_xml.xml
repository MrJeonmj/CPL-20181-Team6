            android:key="userinfocategory"
            android:title="사용자 정보" >
            <Preference
                android:key="idvalue"
                android:title="ID" />
            <Preference
                android:key="namevalue"
                android:title="이름" />
        </PreferenceCategory>

        <PreferenceCategory
            android:key="uc"
            android:title="설정" >

            <EditTextPreference
                android:key="partnerphonevalue"
                android:title="보호자연락처" />

            <EditTextPreference
                android:key="phonevalue"
                android:title="연락처" />

            <EditTextPreference
                android:key="homevalue"
                android:title="주소" />

            <EditTextPreference
                android:key="birthvalue"
                android:title="생년월일" />

            <EditTextPreference
                android:key="pwvalue"
                android:title="비밀번호" />
            <EditTextPreference
                android:key="devicevalue"
                android:title="디바이스 일련번호" />
